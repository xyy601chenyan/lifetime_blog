<div class="form-group">
  <%= f.label :title, "标题",class: "control-label" %>
  <%= f.text_field :title,class: "form-control",required: true,autofocus: true %>
  <div class="help-block with-errors"></div>
</div>

<div class="form-group">
 <%= f.label :status, "类型:" %>
 <div class="btn-group" data-toggle="buttons">
 <% Article::STATUS.each do |status| %>
   <label class="btn btn-default <%= (status == f.object.status)? 'active' : '' %>">
     <%= f.radio_button :status,status %>
     <%= show_article_kind(status)%>
   </label>
 <% end %>
 </div>
</div>

<div class="form-group">
  <%= f.label :title, "正文",class: "control-label" %>
  <%= f.text_area :description,class: "form-control description-form",required: true %>
  <div class="help-block with-errors"></div>
</div>
<br>

<%= f.submit "确定",class: "btn btn-primary",disable_with: "提交中..."%>
